# Coolify Nixpacks 部署环境变量配置
# 复制这些变量到 Coolify 的 Environment Variables 部分

# ==============================
# 应用程序配置 (必需)
# ==============================
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
SKIP_ENV_VALIDATION=true

# ==============================
# 数据库 (必需)
# ==============================
DATABASE_URL=postgresql://user:password@host:5432/database

# ==============================
# Clerk Authentication (必需)
# ==============================
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# ==============================
# Stripe Payment (必需)
# ==============================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==============================
# 功能开关 (必需)
# ==============================
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_FEATURES=true
ENABLE_ADMIN_FEATURES=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_PAYMENT_FEATURES=true
NEXT_PUBLIC_DEFAULT_LOCALE=zh
NEXT_PUBLIC_SUPPORTED_LOCALES=zh,en

# ==============================
# AI API Keys (至少需要一个)
# ==============================
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here
# XAI_API_KEY=your_xai_api_key_here

# ==============================
# Redis 缓存 (可选但推荐)
# ==============================
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ==============================
# 邮件服务 (可选)
# ==============================
# RESEND_API_KEY=your_resend_api_key_here

# ==============================
# 分析和监控 (可选)
# ==============================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn

# ==============================
# Nixpacks 特定配置
# ==============================
NIXPACKS_NODE_VERSION=20
NIXPACKS_PNPM_VERSION=9